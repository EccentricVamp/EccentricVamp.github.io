---
import type { MarkdownHeading } from "astro";

const { headings, editUrl } = Astro.props as {
	headings: MarkdownHeading[];
	editUrl: string;
};
---

<nav class="pt-10 px-8">
	<h2
		class="text-slate-900 font-semibold mb-4 text-sm leading-6 dark:text-slate-100"
	>
		On this page
	</h2>
	<ul class="text-slate-700 text-sm leading-6 dark:text-slate-400">
		{
			headings.map((heading) => (
				<li>
					<a href={"#" + heading.slug}>{heading.text}</a>
				</li>
			))
		}
	</ul>

	<h2
		class="text-slate-900 font-semibold mb-4 text-sm leading-6 dark:text-slate-100 mt-12"
	>
		More
	</h2>
	<ul class="text-slate-700 text-sm leading-6 dark:text-slate-400">
		<li>
			<a href={editUrl}>
				<span>Edit this page</span>
			</a>
		</li>
	</ul>
</nav>
