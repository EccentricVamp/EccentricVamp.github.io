---
import { SIDEBAR } from "../config";
---

<nav>
	<ul>
		{
			Object.entries(SIDEBAR).map(([header, children]) => (
				<li>
					<h2>{header}</h2>
					<ul>
						{children.map((child) => (
							<li>
								<a href={Astro.site?.pathname + child.link}>
									{child.text}
								</a>
							</li>
						))}
					</ul>
				</li>
			))
		}
	</ul>
</nav>
